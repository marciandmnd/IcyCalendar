<%= simple_form_for @appointment, remote: true do |f| %>
	<div class="modal-content">
		<div class="row">
			<div class="appointment-form">
				<%= f.hidden_field :date, value: @date ? @date.to_s : @appointment.date %>
				<%= f.label 'time' %>
				<%= f.time_select :time, {default: @date}, {style: 'width:75px;'} %>
				<br/>
				<%= f.input :description %>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<%= f.button :submit, id: 'btn-submit-new-appointment', class: "waves-effect waves-light btn" %>
	</div>
<% end %>